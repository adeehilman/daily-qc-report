    <ui:InvokeCode ContinueOnError="False" DisplayName="Validate Rules" sap:VirtualizedContainerService.HintSize="464,180" sap2010:WorkflowViewState.IdRef="InvokeCode_1" Language="VisualBasic">
      <ui:InvokeCode.Code>
' Validation logic similar to Laravel $request-&gt;validate()
For Each rule In in_Rules
    Dim fieldName As String = rule.Key
    Dim ruleValue As String = rule.Value
    Dim fieldValue As Object = Nothing
    
    ' Get field value from data
    If in_Data.ContainsKey(fieldName) Then
        fieldValue = in_Data(fieldName)
    End If
    
    ' Parse rules (supports: required, numeric, exists_folder, exists_file, min:N, max:N)
    Dim ruleList() As String = ruleValue.Split("|"c)
    
    For Each r In ruleList
        Dim ruleName As String = r.Trim().ToLower()
        
        Select Case True
            Case ruleName = "required"
                If fieldValue Is Nothing OrElse String.IsNullOrEmpty(fieldValue.ToString()) Then
                    errorList.Add(fieldName &amp; " is required")
                End If
                
            Case ruleName = "numeric"
                If fieldValue IsNot Nothing AndAlso Not IsNumeric(fieldValue) Then
                    errorList.Add(fieldName &amp; " must be numeric")
                End If
                
            Case ruleName = "exists_folder"
                If fieldValue IsNot Nothing AndAlso Not System.IO.Directory.Exists(fieldValue.ToString()) Then
                    errorList.Add(fieldName &amp; " folder does not exist")
                End If
                
            Case ruleName = "exists_file"
                If fieldValue IsNot Nothing AndAlso Not System.IO.File.Exists(fieldValue.ToString()) Then
                    errorList.Add(fieldName &amp; " file does not exist")
                End If
                
            Case ruleName.StartsWith("min:")
                Dim minVal As Integer = CInt(ruleName.Split(":"c)(1))
                If fieldValue IsNot Nothing AndAlso CInt(fieldValue) &lt; minVal Then
                    errorList.Add(fieldName &amp; " must be at least " &amp; minVal.ToString())
                End If
                
            Case ruleName.StartsWith("max:")
                Dim maxVal As Integer = CInt(ruleName.Split(":"c)(1))
                If fieldValue IsNot Nothing AndAlso CInt(fieldValue) &gt; maxVal Then
                    errorList.Add(fieldName &amp; " must be at most " &amp; maxVal.ToString())
                End If
        End Select
    Next
Next
      </ui:InvokeCode.Code>
