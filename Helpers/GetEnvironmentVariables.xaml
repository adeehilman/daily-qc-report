    <x:Property Name="credentialFolderPath_In" Type="InArgument(x:String)" />
    <!-- Output Arguments -->
    <x:Property Name="config_Out" Type="OutArgument(scg:Dictionary(x:String, x:String))" />
    <x:Property Name="username_Out" Type="OutArgument(x:String)" />
    <x:Property Name="password_Out" Type="OutArgument(ss:SecureString)" />
    <x:Property Name="isProduction_Out" Type="OutArgument(x:Boolean)" />
  </x:Members>
