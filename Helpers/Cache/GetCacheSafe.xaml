  <Sequence DisplayName="GetCacheSafe" sap2010:WorkflowViewState.IdRef="Sequence_1">
    <Sequence.Variables>
      <Variable x:TypeArguments="x:String" Name="cacheFilePath" />
      <Variable x:TypeArguments="x:String" Default="[Environment.CurrentDirectory + &quot;\Data\Cache&quot;]" Name="defaultCachePath" />
      <Variable x:TypeArguments="x:String" Name="sanitizedKey" />
      <Variable x:TypeArguments="x:String" Name="actualCachePath" />
      <Variable x:TypeArguments="scg:IEnumerable(x:String)" Name="cacheFiles" />
      <Variable x:TypeArguments="x:String" Name="matchedFile" />
    </Sequence.Variables>
    <sap:WorkflowViewStateService.ViewState>
      <scg:Dictionary x:TypeArguments="x:String, x:Object">
        <x:Boolean x:Key="IsExpanded">True</x:Boolean>
      </scg:Dictionary>
    </sap:WorkflowViewStateService.ViewState>
    <ui:LogMessage DisplayName="Log Start GetCacheSafe" sap2010:WorkflowViewState.IdRef="LogMessage_1" Level="Info" Message="[&quot;[GetCacheSafe] Starting to get cache for key: &quot; + cacheKey_In]" />
    <Assign DisplayName="Init cacheFound" sap2010:WorkflowViewState.IdRef="Assign_InitFound">
      <Assign.To>
        <OutArgument x:TypeArguments="x:Boolean">[cacheFound_Out]</OutArgument>
      </Assign.To>
      <Assign.Value>
        <InArgument x:TypeArguments="x:Boolean">[False]</InArgument>
      </Assign.Value>
    </Assign>
    <Assign DisplayName="Init cacheValue" sap2010:WorkflowViewState.IdRef="Assign_InitValue">
      <Assign.To>
        <OutArgument x:TypeArguments="x:String">[cacheValue_Out]</OutArgument>
      </Assign.To>
      <Assign.Value>
        <InArgument x:TypeArguments="x:String">[""]</InArgument>
      </Assign.Value>
    </Assign>
    <Assign DisplayName="Sanitize Key" sap2010:WorkflowViewState.IdRef="Assign_Sanitize">
      <Assign.To>
        <OutArgument x:TypeArguments="x:String">[sanitizedKey]</OutArgument>
      </Assign.To>
      <Assign.Value>
        <InArgument x:TypeArguments="x:String">[cacheKey_In.Replace("/", "__").Replace("\", "__").Replace(":", "__").Replace("*", "__").Replace("?", "__").Replace("&lt;", "__").Replace("&gt;", "__").Replace("|", "__")]</InArgument>
      </Assign.Value>
    </Assign>
    <ui:LogMessage DisplayName="Log Sanitized Key" sap2010:WorkflowViewState.IdRef="LogMessage_Sanitized" Level="Info" Message="[&quot;[GetCacheSafe] Sanitized key: &quot; + sanitizedKey]" />
    <If Condition="[String.IsNullOrEmpty(cacheFolderPath_In)]" DisplayName="Check Cache Folder Path" sap2010:WorkflowViewState.IdRef="If_1">
      <If.Then>
        <Assign sap2010:WorkflowViewState.IdRef="Assign_1">
          <Assign.To>
            <OutArgument x:TypeArguments="x:String">[actualCachePath]</OutArgument>
          </Assign.To>
          <Assign.Value>
            <InArgument x:TypeArguments="x:String">[defaultCachePath]</InArgument>
          </Assign.Value>
        </Assign>
      </If.Then>
      <If.Else>
        <Assign sap2010:WorkflowViewState.IdRef="Assign_2">
          <Assign.To>
            <OutArgument x:TypeArguments="x:String">[actualCachePath]</OutArgument>
          </Assign.To>
          <Assign.Value>
            <InArgument x:TypeArguments="x:String">[cacheFolderPath_In]</InArgument>
          </Assign.Value>
        </Assign>
      </If.Else>
    </If>
    <Assign DisplayName="Build Cache File Path" sap2010:WorkflowViewState.IdRef="Assign_Path">
      <Assign.To>
        <OutArgument x:TypeArguments="x:String">[cacheFilePath]</OutArgument>
      </Assign.To>
      <Assign.Value>
        <InArgument x:TypeArguments="x:String">[actualCachePath + "\" + sanitizedKey + ".txt"]</InArgument>
      </Assign.Value>
    </Assign>
    <ui:LogMessage DisplayName="Log Cache Path" sap2010:WorkflowViewState.IdRef="LogMessage_2" Level="Info" Message="[&quot;[GetCacheSafe] Cache file path: &quot; + cacheFilePath]" />
    <If Condition="[File.Exists(cacheFilePath)]" DisplayName="Check File Exists" sap2010:WorkflowViewState.IdRef="If_2">
      <If.Then>
        <Sequence DisplayName="Read Cache File" sap2010:WorkflowViewState.IdRef="Sequence_2">
          <Assign DisplayName="Read File Content" sap2010:WorkflowViewState.IdRef="Assign_3">
            <Assign.To>
              <OutArgument x:TypeArguments="x:String">[cacheValue_Out]</OutArgument>
            </Assign.To>
            <Assign.Value>
              <InArgument x:TypeArguments="x:String">[File.ReadAllText(cacheFilePath)]</InArgument>
            </Assign.Value>
          </Assign>
          <Assign DisplayName="Set Found True" sap2010:WorkflowViewState.IdRef="Assign_FoundTrue">
            <Assign.To>
              <OutArgument x:TypeArguments="x:Boolean">[cacheFound_Out]</OutArgument>
            </Assign.To>
            <Assign.Value>
              <InArgument x:TypeArguments="x:Boolean">[True]</InArgument>
            </Assign.Value>
          </Assign>
          <ui:LogMessage DisplayName="Log Cache Found" sap2010:WorkflowViewState.IdRef="LogMessage_3" Level="Info" Message="[&quot;[GetCacheSafe] Cache found for key: &quot; + cacheKey_In + &quot; with value: &quot; + cacheValue_Out]" />
        </Sequence>
      </If.Then>
      <If.Else>
        <Sequence DisplayName="Try Contains Search" sap2010:WorkflowViewState.IdRef="Sequence_3">
          <ui:LogMessage DisplayName="Log Try Contains" sap2010:WorkflowViewState.IdRef="LogMessage_TryContains" Level="Info" Message="[&quot;[GetCacheSafe] Exact match not found, trying contains search...&quot;]" />
          <If Condition="[Directory.Exists(actualCachePath)]" DisplayName="Check Dir Exists" sap2010:WorkflowViewState.IdRef="If_DirExists">
            <If.Then>
              <Sequence DisplayName="Search By Contains" sap2010:WorkflowViewState.IdRef="Sequence_Search">
                <Assign DisplayName="Get Cache Files" sap2010:WorkflowViewState.IdRef="Assign_GetFiles">
                  <Assign.To>
                    <OutArgument x:TypeArguments="scg:IEnumerable(x:String)">[cacheFiles]</OutArgument>
                  </Assign.To>
                  <Assign.Value>
                    <InArgument x:TypeArguments="scg:IEnumerable(x:String)">[Directory.GetFiles(actualCachePath, "*.txt").AsEnumerable()]</InArgument>
                  </Assign.Value>
                </Assign>
                <Assign DisplayName="Find Match" sap2010:WorkflowViewState.IdRef="Assign_FindMatch">
                  <Assign.To>
                    <OutArgument x:TypeArguments="x:String">[matchedFile]</OutArgument>
                  </Assign.To>
                  <Assign.Value>
                    <InArgument x:TypeArguments="x:String">[If(cacheFiles.Any(Function(f) Path.GetFileNameWithoutExtension(f).Contains(sanitizedKey)), cacheFiles.First(Function(f) Path.GetFileNameWithoutExtension(f).Contains(sanitizedKey)), "")]</InArgument>
                  </Assign.Value>
                </Assign>
                <If Condition="[Not String.IsNullOrEmpty(matchedFile)]" DisplayName="Check Match Found" sap2010:WorkflowViewState.IdRef="If_MatchFound">
                  <If.Then>
                    <Sequence DisplayName="Read Matched File" sap2010:WorkflowViewState.IdRef="Sequence_ReadMatch">
                      <Assign DisplayName="Read Matched Content" sap2010:WorkflowViewState.IdRef="Assign_ReadMatch">
                        <Assign.To>
                          <OutArgument x:TypeArguments="x:String">[cacheValue_Out]</OutArgument>
                        </Assign.To>
                        <Assign.Value>
                          <InArgument x:TypeArguments="x:String">[File.ReadAllText(matchedFile)]</InArgument>
                        </Assign.Value>
                      </Assign>
                      <Assign DisplayName="Set Found True Match" sap2010:WorkflowViewState.IdRef="Assign_FoundMatch">
                        <Assign.To>
                          <OutArgument x:TypeArguments="x:Boolean">[cacheFound_Out]</OutArgument>
                        </Assign.To>
                        <Assign.Value>
                          <InArgument x:TypeArguments="x:Boolean">[True]</InArgument>
                        </Assign.Value>
                      </Assign>
                      <ui:LogMessage DisplayName="Log Match Found" sap2010:WorkflowViewState.IdRef="LogMessage_MatchFound" Level="Info" Message="[&quot;[GetCacheSafe] Cache found by contains in: &quot; + matchedFile]" />
                    </Sequence>
                  </If.Then>
                  <If.Else>
                    <ui:LogMessage DisplayName="Log Not Found" sap2010:WorkflowViewState.IdRef="LogMessage_4" Level="Warn" Message="[&quot;[GetCacheSafe] Cache not found for key: &quot; + cacheKey_In]" />
                  </If.Else>
                </If>
              </Sequence>
            </If.Then>
            <If.Else>
              <ui:LogMessage DisplayName="Log Dir Not Exists" sap2010:WorkflowViewState.IdRef="LogMessage_NoDir" Level="Warn" Message="[&quot;[GetCacheSafe] Cache directory not found: &quot; + actualCachePath]" />
            </If.Else>
          </If>
        </Sequence>
      </If.Else>
    </If>
    <ui:LogMessage DisplayName="Log GetCacheSafe Complete" sap2010:WorkflowViewState.IdRef="LogMessage_5" Level="Info" Message="[&quot;[GetCacheSafe] Get cache completed for key: &quot; + cacheKey_In]" />
  </Sequence>
</Activity>
