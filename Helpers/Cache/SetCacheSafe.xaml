    </Assign>
    <ui:LogMessage DisplayName="Log Sanitized Key" sap2010:WorkflowViewState.IdRef="LogMessage_Sanitized" Level="Info" Message="[&quot;[SetCacheSafe] Sanitized key: &quot; + sanitizedKey]" />
    <If Condition="[String.IsNullOrEmpty(cacheFolderPath_In)]" DisplayName="Check Cache Folder Path" sap2010:WorkflowViewState.IdRef="If_1">
      <If.Then>
        <Assign sap2010:WorkflowViewState.IdRef="Assign_1">
          <Assign.To>
            <OutArgument x:TypeArguments="x:String">[cacheFilePath]</OutArgument>
          </Assign.To>
          <Assign.Value>
            <InArgument x:TypeArguments="x:String">[defaultCachePath + "\" + sanitizedKey + ".txt"]</InArgument>
          </Assign.Value>
        </Assign>
      </If.Then>
      <If.Else>
        <Assign sap2010:WorkflowViewState.IdRef="Assign_2">
          <Assign.To>
            <OutArgument x:TypeArguments="x:String">[cacheFilePath]</OutArgument>
          </Assign.To>
          <Assign.Value>
            <InArgument x:TypeArguments="x:String">[cacheFolderPath_In + "\" + sanitizedKey + ".txt"]</InArgument>
          </Assign.Value>
        </Assign>
      </If.Else>
    </If>
    <ui:LogMessage DisplayName="Log Cache Path" sap2010:WorkflowViewState.IdRef="LogMessage_2" Level="Info" Message="[&quot;[SetCacheSafe] Cache file path: &quot; + cacheFilePath]" />
    <If Condition="[Not Directory.Exists(Path.GetDirectoryName(cacheFilePath))]" DisplayName="Check Directory Exists" sap2010:WorkflowViewState.IdRef="If_2">
      <If.Then>
        <InvokeMethod DisplayName="Create Directory" MethodName="CreateDirectory" sap2010:WorkflowViewState.IdRef="InvokeMethod_1" TargetType="s:Directory" xmlns:s="clr-namespace:System.IO;assembly=System.Private.CoreLib">
          <InvokeMethod.Parameters>
            <InArgument x:TypeArguments="x:String">[Path.GetDirectoryName(cacheFilePath)]</InArgument>
          </InvokeMethod.Parameters>
        </InvokeMethod>
      </If.Then>
    </If>
    <If Condition="[File.Exists(cacheFilePath)]" DisplayName="Check File Exists" sap2010:WorkflowViewState.IdRef="If_3">
      <If.Then>
        <Sequence DisplayName="Delete Existing Cache" sap2010:WorkflowViewState.IdRef="Sequence_2">
          <ui:LogMessage DisplayName="Log Delete Old Cache" sap2010:WorkflowViewState.IdRef="LogMessage_3" Level="Info" Message="[&quot;[SetCacheSafe] Deleting existing cache file: &quot; + cacheFilePath]" />
          <InvokeMethod DisplayName="Delete File" MethodName="Delete" sap2010:WorkflowViewState.IdRef="InvokeMethod_2" TargetType="s:File" xmlns:s="clr-namespace:System.IO;assembly=System.Private.CoreLib">
            <InvokeMethod.Parameters>
              <InArgument x:TypeArguments="x:String">[cacheFilePath]</InArgument>
            </InvokeMethod.Parameters>
          </InvokeMethod>
        </Sequence>
      </If.Then>
    </If>
    <InvokeMethod DisplayName="Write Cache File" MethodName="WriteAllText" sap2010:WorkflowViewState.IdRef="InvokeMethod_3" TargetType="s:File" xmlns:s="clr-namespace:System.IO;assembly=System.Private.CoreLib">
      <InvokeMethod.Parameters>
        <InArgument x:TypeArguments="x:String">[cacheFilePath]</InArgument>
        <InArgument x:TypeArguments="x:String">[cacheValue_In]</InArgument>
      </InvokeMethod.Parameters>
    </InvokeMethod>
